name: odfweb-nginx
volumes:
  db:
  odfweb:
  redis:

services:
  # Note: MariaDB is an external service. You can find more information about the configuration here:
  # https://hub.docker.com/_/mariadb
  db:
    # Note: Check the recommend version here: https://docs.odfweb.com/server/latest/admin_manual/installation/system_requirements.html#server
    image: mariadb:lts
    restart: always
    command: --transaction-isolation=READ-COMMITTED
    volumes:
      - db:/var/lib/mysql
    env_file:
      - db.env
    healthcheck:
      test: ["CMD", "healthcheck.sh", "--connect", "--innodb_initialized"]
      start_period: 5s
      interval: 5s
      timeout: 5s
      retries: 5

  # Note: Redis is an external service. You can find more information about the configuration here:
  # https://hub.docker.com/_/redis
  redis:
    image: redis:alpine
    restart: always
    volumes:
      - redis:/data

  app:
    image: cncf-distribution.infra.ossii.com.tw/odfweb:5.0.0-fpm
    restart: always
    depends_on:
      editor:
        condition: service_healthy
      db:
        condition: service_healthy
      redis:
        condition: service_started
    # Workaround domain name resolution in /etc/hosts on the container host not working
    extra_hosts:
      - "__ODFWEB_DOMAIN_NAME__:host-gateway"
    volumes:
      - odfweb:/var/www/html
      - ./apps:/var/www/html/custom_apps
      - ./config:/var/www/html/config
      - ./data:/var/www/html/data
      #- ./theme:/var/www/html/themes/custom
      - ./app-hooks/post-installation:/docker-entrypoint-hooks.d/post-installation
    env_file:
      - db.env
      - app.env
    healthcheck:
      test: 'runuser -s /usr/local/bin/php - www-data /var/www/html/occ status 2>/dev/null | grep -e "installed: true" -e "maintenance: false" -e "needsDbUpgrade: false" | wc -l | [ "`cat`" = "3" ]'
      interval: 10s
      retries: 10
      start_period: 10s
      timeout: 10s

  # Note: Nginx is an external service. You can find more information about the configuration here:
  # https://hub.docker.com/_/nginx/
  web:
    image: nginx:alpine-slim
    restart: always
    ports:
      - 80:80
      - __ODFWEB_PORT_HTTPS__:443
    depends_on:
      app:
        condition: service_healthy
    volumes:
      # https://docs.nextcloud.com/server/latest/admin_manual/installation/nginx.html
      - ./nginx.conf.d:/etc/nginx/conf.d
      - ./ssl/__ODFWEB_DOMAIN_NAME__.crt:/etc/ssl/nginx/__ODFWEB_DOMAIN_NAME__.crt:ro
      - ./ssl/__ODFWEB_DOMAIN_NAME__.key:/etc/ssl/nginx/__ODFWEB_DOMAIN_NAME__.key:ro
    volumes_from:
      - app

  editor:
    image: cncf-distribution.infra.ossii.com.tw/modaodfweb:3.8-latest
    restart: always
    environment:
      # Set local timezone to UTC+8
      - TZ=CST-8
    # Workaround domain name resolution in /etc/hosts on the container host not working
    extra_hosts:
      - "__ODFWEB_DOMAIN_NAME__:host-gateway"
    volumes:
      - type: bind
        source: ./modaodfweb-config
        target: /etc/modaodfweb
      - type: bind
        source: ./ssl/__ODFWEB_DOMAIN_NAME__.crt
        target: /etc/modaodfweb/odfweb.crt
        read_only: true
      # Set /config/logging/file@enable to true in the config if you want to
      # read the logs in the admin console(will increase I/O load)
      #- type: bind
        #source: ./modaodfweb-logs
        #target: /var/log
    cap_add:
      - CHOWN
      - DAC_OVERRIDE
      - FOWNER
      - MKNOD
      - SYS_ADMIN
      - SYS_CHROOT
    ulimits:
      # docker --ulimit does not support unlimited or large numbers · Issue #12515 · moby/moby
      # https://github.com/moby/moby/issues/12515
      nproc: -1
    healthcheck:
      test: 'curl --fail http://localhost:9980'
      interval: 5s
      retries: 10
      start_period: 5s
      timeout: 2s
